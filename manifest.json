{
  "manifest_version": 3,
  "name": "Firefly Cursor",
  "version": "1.0",
  "description": "Firefly Cursor",
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://localhost:*/*",
        "*://127.0.0.1:*/*",
        "*://*.localhost/*",
        "*://*.localhost:*/*",
        "*://*.127.0.0.1/*",
        "*://*.127.0.0.1:*/*"
      ],
      "js": ["content.js"],
      "css": ["content-style.css"]
    }
  ]
}
